<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.TabPane.TabClosingPolicy?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox alignment="CENTER" prefHeight="1920" prefWidth="1200" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" styleClass="main-container">
    <children>
        <TabPane prefHeight="974.0" prefWidth="813.0" VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Wynajęte samochody">
                    <content>
                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <HBox alignment="CENTER" spacing="10">
                                    <Label style="-fx-font-size: 24px;" text="Wynajęte samochody" />
                                    <TextField promptText="Search..." />
                                </HBox>
                                <TableView VBox.vgrow="ALWAYS" styleClass="rounded-table-view">
                                    <columns>
                                        <TableColumn text="IDRent" />
                                        <TableColumn text="IDClient" />
                                        <TableColumn text="Rented_Date" />
                                        <TableColumn text="Rented_From" />
                                        <TableColumn text="Rented_Until" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab text="Pozycje wynajmu">
                    <content>
                        <VBox alignment="CENTER" spacing="10">
                            <children>
                                <HBox alignment="CENTER" spacing="10">
                                    <Label style="-fx-font-size: 24px;" text="Pozycje wynajmu" />
                                    <TextField promptText="Search..." />
                                </HBox>
                                <TableView VBox.vgrow="ALWAYS" styleClass="rounded-table-view">
                                    <columns>
                                        <TableColumn text="IDPosition_of_rents" />
                                        <TableColumn text="IDClient" />
                                        <TableColumn text="IDRent" />
                                        <TableColumn text="IDCar" />
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>

        <HBox alignment="CENTER" spacing="10">
            <Button text="Dodaj nowy wynajem" />
        </HBox>
    </children>
    <stylesheets>
        <URL value="@main-view.css" />
    </stylesheets>
</VBox>
