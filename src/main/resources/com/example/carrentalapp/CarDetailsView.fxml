                    </font>
                </Label>
            </children>
        </HBox>
        <GridPane VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="185.20001220703125" minWidth="10.0" prefWidth="139.60003662109375" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="240.39996337890625" minWidth="10.0" prefWidth="240.39996337890625" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="30.0" minHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="30.0" minHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="30.0" minHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="30.0" minHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="30.0" minHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="30.0" minHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="30.0" minHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="52.400000000000006" minHeight="0.0" prefHeight="27.799999999999983" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="31.80000000000001" minHeight="4.400000000000006" prefHeight="29.80000000000001" />
            <RowConstraints />
            </rowConstraints>
            <children>
                <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <Label fx:id="carIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Brand:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="brandTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Model:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="modelTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Engine ID:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <Label fx:id="engineIdLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Engine Name:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="engineNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Power:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <TextField fx:id="powerTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Fuel Type:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="fuelTypeTextField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                <TextField fx:id="priceTextField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
